extends base.pug

block content
  h2 Upload Video
  if errorMsg
    span=errorMsg
  form(method="POST", action="/videos/upload", enctype="multipart/form-data")
    label(for="video") Video File 
    input(name="video", type="file", accept="video/*", id="video", required)
    input(name="title", type="text", placeholder="Type the title")
    input(name="description", type="text", placeholder="Type Description", required)
    input(name="hashTags", type="text", placeholder="Type Comma", required)
    input(type="submit", value="Upload Video...")
